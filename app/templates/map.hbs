<div class="fluid-container d-flex fill flex-column mx-3 my-2">
    <div class="row d-flex align-items-end mb-2">
        <div class="location-details col-sm">
            {{place-autocomplete-field
                value=address
                disabled=false
                handlerController=this
                placeChangedCallback='onPlaceChanged'
                withGeoLocate=true
                setValueWithProperty='formatted_address'
                preventSubmit=true
                inputClass='form-control '
            }}
            <span>Coordinates: Lat {{coords.lat}} Long {{coords.lng}}</span>
        </div>
        <div class="col-sm">
            tes
        </div>
    </div>
    <div class="row fill">
        <div class="col-md-12">
            {{#g-map lat=coords.lat
                     lng=coords.lng
                     zoom=16
                     zoomControl=true
                     streetViewControl=false
                     onLoad=(action 'onMapLoad')
                     onClick=(action 'onClick')
                     as |g|
            }}
                {{g.marker
                lat=coords.lat
                lng=coords.lng
                draggable=true
                }}

            {{/g-map}}
        </div>
    </div>
</div>